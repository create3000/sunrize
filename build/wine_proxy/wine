#!/usr/bin/env node
const { spawn } = require ("child_process");

const
    args = process .argv .slice (2),
    cmd  = args .shift (),
    cwd  = process .cwd ();

if (cmd .endsWith ("7z.exe"))
{
   const z7Args = args .filter (v => v !== "on");

   spawn ("7zz", z7Args, { cwd });
}
else
{
    // Cannot use "wine" loop!
    spawn ("/usr/local/bin/wine64", [cmd, ... args], { cwd });
}
