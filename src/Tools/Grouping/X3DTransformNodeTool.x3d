<![CDATA[ecmascript:

function initialize ()
{
   whichChoice_changed = 0;
}

function set_time (value)
{
   if (value - time < 0.4)
   {
      time = 0;

      if (bboxSize .length ())
         set_tool ((activeTool + 1) % tools .length);
      else
         set_tool (0);
   }
   else
   {
      time = value;
   }
}

function set_tool (value)
{
   switch (tools [value])
   {
      case "TRANSLATE":
      {
         activeTool = 0;
         break;
      }
      case "ROTATE":
      {
         activeTool = 1;
         break;
      }
      case "SCALE":
      {
         activeTool = 2;
         break;
      }
  }
}
]]>
